<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#4689C8"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView

        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"

        android:scaleType="fitXY"
        android:src="@drawable/we" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type name of groom" />

        <EditText
            android:id="@+id/message_groom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name of groom"
            android:inputType="textCapSentences|textAutoCorrect"
            android:textAllCaps="true"
            android:textColor="#7F3734"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type name bride" />

        <EditText
            android:id="@+id/message_bride"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name of bride"
            android:inputType="textCapSentences|textAutoCorrect"
            android:textAllCaps="true"
            android:textColor="#7F3734"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of wedding" />

        <EditText
            android:id="@+id/message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Type date as you want to show in your card"
            android:inputType="textCapSentences|textAutoCorrect"
            android:textAllCaps="true"
            android:textColor="#7F3734"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venue" />

        <EditText
            android:id="@+id/message_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Venue address"
            android:inputType="textCapSentences|textAutoCorrect"
            android:textAllCaps="true"
            android:textColor="#7F3734"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:background="#50666666"
            android:onClick="submitOrder"
            android:text="confirm" />
    </LinearLayout>


</RelativeLayout>
